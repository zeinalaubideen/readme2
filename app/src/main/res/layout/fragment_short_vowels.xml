<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:contextClickable="false"
    android:textAlignment="center"
    android:background="#F7E7CE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#247BA0"
        android:weightSum="1"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp">


            <TextView
                android:textColor="#FDFFFC"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Short Vowels"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#FDFFFC"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There are three short vowels: fathah (فتحة), Dhammah (ضمة), and kasrah (كسرة)"
                android:id="@+id/textView84"
                android:textSize="18sp"
                android:layout_margin="10dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vowel"
                        android:id="@+id/textView36"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shape"
                        android:id="@+id/textView37"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Example"
                        android:id="@+id/textView38"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center">

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fathah"
                        android:id="@+id/textView39"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="َ"
                        android:id="@+id/textView40"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="28dp" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بَ"
                        android:id="@+id/textView41"
                        android:layout_weight="1"
                        android:textSize="28dp"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center">

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhammah"
                        android:id="@+id/textView42"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ُ"
                        android:id="@+id/textView43"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="28dp" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بُ"
                        android:id="@+id/textView44"
                        android:layout_weight="1"
                        android:textSize="28dp"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center">

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kasrah"
                        android:id="@+id/textView45"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ِ"
                        android:id="@+id/textView46"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="28dp" />

                    <TextView
                        android:textColor="#FDFFFC"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بِ"
                        android:id="@+id/textView47"
                        android:layout_weight="1"
                        android:textSize="28dp"
                        android:textAlignment="center" />
                </TableRow>
            </TableLayout>

            <TextView
                android:textColor="#FDFFFC"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The letter ر will be read with tafkheem when it has a fathah or dhammah and with tarqeeq when it has a kasrah."
                android:id="@+id/textView89"
                android:textSize="18sp"
                android:layout_margin="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/thaButton"
                android:src="@drawable/thacirc"
                android:onClick="tha"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_gravity="bottom"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/taButton"
                android:src="@drawable/tacirc"
                android:onClick="ta"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_gravity="bottom"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/baButton"
                android:src="@drawable/bacirc"
                android:onClick="ba"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_gravity="bottom"
                android:nestedScrollingEnabled="false"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/alifButton"
                android:src="@drawable/alifcirct"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_gravity="bottom"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:layout_gravity="center"
            android:gravity="center">

