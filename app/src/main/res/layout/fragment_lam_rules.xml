<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zayne.fragz.LamRules"
    android:background="#247BA0"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#247BA0">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FDFFFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Rules of ل"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:textColor="#FDFFFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The ل in the name of Allah will be read with tafkheem when preceded with fathah or dhammah and with tarqeeq when preceded with kasrah"
            android:textDirection="ltr"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:id="@+id/imageView4"
            android:layout_weight="4"
            android:src="@drawable/bismilah"
            android:paddingLeft="7dp" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:id="@+id/imageView5"
            android:layout_weight="3"
            android:src="@drawable/rasul" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:src="@drawable/minallahi"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="7dp" />
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textColor="#FDFFFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" a ل is never read with tafkheem anywhere else, whether it has shaddah or not."
                android:id="@+id/textView6"
                android:textSize="18sp"
                android:layout_margin="10dp" />

            <TextView
                android:textColor="#FDFFFC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textIsSelectable="false"
                android:textSize="18sp"
                android:textDirection="ltr"
                android:text="The letters at the beginning of nouns with the definite article ال are of two types:"
                android:layout_margin="10dp" />

            <TextView
                android:textColor="#FDFFFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moon"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="10dp" />

            <TextView
                android:textColor="#FDFFFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textDirection="ltr"
                android:text="Moon or qamari (قمري) letters in which the ل is read as in الْقَمَرُ. Those letters are:"
                android:id="@+id/textView8"
                android:textSize="16sp"
                android:layout_margin="10dp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView8"
                android:src="@drawable/hamzaqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView9"
                android:src="@drawable/baqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView11"
                android:src="@drawable/haqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView10"
                android:src="@drawable/jeemqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView12"
                android:src="@drawable/khaqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView13"
                android:src="@drawable/aynqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView19"
                android:src="@drawable/ghaynqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView20"
                android:src="@drawable/faqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView21"
                android:src="@drawable/qafqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView22"
                android:src="@drawable/kaqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView23"
                android:src="@drawable/meemqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView24"
                android:src="@drawable/wowqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView25"
                android:src="@drawable/haaqamr" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView26"
                android:src="@drawable/yaaqamr" />

        </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:id="@+id/textView10"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="#FDFFFC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun or shamsi letters into which the ل is assimilated. These letters are written with shaddah to indicate that the ل will not be read as in السَّمْسُ. Those letters are:"
                android:id="@+id/textView11"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="#FDFFFC" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView7"
                android:src="@drawable/tashams" />

            <ImageView
                android:layout_width="90dp"
