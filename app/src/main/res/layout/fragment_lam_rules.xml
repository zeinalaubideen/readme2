                android:id="@+id/imageView31"
                android:src="@drawable/sheenshams" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView32"
                android:src="@drawable/saadshams" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView33"
                android:src="@drawable/daadshams" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView34"
                android:src="@drawable/taahshams" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView35"
                android:src="@drawable/dhaashams" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView36"
                android:src="@drawable/lamshams" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView37"
                android:src="@drawable/noonshams" />


        </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>
